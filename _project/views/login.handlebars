<div class = "loginBackground">
    <div id = "principal">
        <div class = "wrapper">
            <div class = "content">
                <h2>Login</h2>
                <form action = "/login" method = "post">
                    <label for="username" >Username:</label> 
                    <input type="text" id="username" name="username" required autofocus><br/>

                    <label for="password">Password:</label> 
                    <input type="password" id="password" name="password" required autocomplete="current-password"><br/>

                    <input type="submit" value="Login">

                    <p>Not a user? <a href="/register">Register</a></p>
                </form>
                {{#if error}}
                    <div class="error" aria-live="assertive">{{error}}</div> 
                {{/if}}
                
                {{#if message}}
                    <div class="error" aria-live="polite">{{message}}</div>   
                {{/if}}  
            </div>
        </div>
    </div>  
</div>