<div class="editUserBackground">
    <div class="wrapper">
        <div class="content">
            <h2>Edit User</h2>
            <form action="/updateUser/{{user.userID}}" method="POST">
                <div>
                    <label for="fName">First Name</label>
                    <input type="text" id="fName" name="fName" value="{{user.fName}}" required>
                </div>
                <div>
                    <label for="lName">Last Name</label>
                    <input type="text" id="lName" name="lName" value="{{user.lName}}" required>
                </div>
                <div>
                    <label for="mail">Email</label>
                    <input type="email" id="mail" name="mail" value="{{user.mail}}" required>
                </div>
                <div>
                    <label for="username">Username</label>
                    <input type="text" id="username" name="username" value="{{user.username}}" required>
                </div>
                <div>
                    <label for="isAdmin">Admin</label>
                    <input type="checkbox" id="isAdmin" name="isAdmin" {{#if user.isAdmin}}checked{{/if}}>
                </div>
                <button type="submit">Save User</button>
            </form>
        </div>
    </div>
</div>
